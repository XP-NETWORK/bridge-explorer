{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "import"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "no-unused-vars": "warn",
        "jsx-quotes": ["error", "prefer-double"],
        "no-console": "warn",
        "no-debugger": "warn",
        "no-constant-condition": "error",
        "no-dupe-else-if": "error",
        "eqeqeq": ["error", "always"],
        "no-empty": "error",
        "no-empty-function": 1,
        "prefer-const": "warn",
        "max-len": ["error", {"code": 180}],
        "semi": ["warn", "never"],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index",
                    "object",
                    "type"
                ],
                "newlines-between": "always-and-inside-groups"
            }
        ]
    }
}
